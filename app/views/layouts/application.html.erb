<!DOCTYPE html>
<html>
<head>
  <title>News Reader</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if logged_in? %>
  <%= button_to "Sign Out", session_url, method: :delete, class: "btn btn-primary float-right btn-margin" %>
<% else %>
  <%= button_to "Sign Up", new_user_url, class: "btn btn-primary float-right btn-margin" %>
  <%= button_to "Sign In", new_session_url, class: "btn btn-primary float-right btn-margin" %>
<% end %>

<%= flash[:errors].join("<br>").html_safe if flash[:errors] %>

  <div class="container">
    <div class="row jumbotron">
      <h1>Hello World</h1>
    </div>
    <%= yield %>
  </div>
</body>
</html>
